<% layout('/layouts/boilerplate') %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <div class="card trainer-name-card">
                <div class="card-body ">
                    <h3>
                        <%= trainer.name %>
                    </h3>
                    <p class="text-muted"><i class="fa-solid fa-dumbbell"></i> Trainer</p>
                    <p><strong>Followers:</strong>
                        <%= trainer.followers.length %>
                    </p>

                    <% if (currentUser && currentUser._id.toString() !==trainer._id.toString()) { %>
                        <% if (isFollowing) { %>
                            <form method="POST" action="/trainers/<%= trainer._id %>/unfollow" class="d-inline">
                                <button class="btn btn-secondary">Unfollow</button>
                            </form>
                            <% } else { %>
                                <form method="POST" action="/trainers/<%= trainer._id %>/follow" class="d-inline">
                                    <button class="btn btn-primary">Follow</button>
                                </form>
                                <% } %>
                                    <% } %>
                </div>
            </div>

            <h4 class="mt-4">Plans by <%= trainer.name %>
            </h4>
            <div class="row">
                <% if (plans.length===0) { %>
                    <p class="text-muted">No plans yet.</p>
                    <% } else { %>
                        <% for (let plan of plans) { %>
                            <div class="col-md-4 mb-3">
                                <div class="card trainer-card">
                                    <img src="<%= plan.image %>" class="card-img-top" alt="<%= plan.title %>"
                                        style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= plan.title %>
                                        </h5>
                                        <p class="card-text">â‚¹<%= plan.price.toLocaleString('en-IN') %>
                                        </p>
                                        <a href="/plans/<%= plan._id %>" class="btn btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% } %>
            </div>
        </div>
    </div>